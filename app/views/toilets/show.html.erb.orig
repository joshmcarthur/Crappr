<script type='text/javascript'>
$(function()
{
	set_map_height_to(500);
	
	$('.star-rating a').live('click', function(){
		var star = $(this);
		var rating = star.attr("data-rating");
		var url = star.attr("href");

		$.ajax({
			type: "post",
			url: url,
			data: {rating: rating}
			});
		return false;
	});
	
});
</script>


